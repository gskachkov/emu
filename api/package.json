{
  "name": "emu-api",
  "version": "1.0.0",
  "description": "Emu RESTful API",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "nodemon build/server.js",
    "start-watch": "nodemon",
    "prod": "npm run build && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "@juaning",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.4.6",
    "mongoose-validator": "^2.0.2",
    "morgan": "^1.9.0",
    "parse-error": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^10.3.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "nodemon": "^1.17.5"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__/*",
      "tests/*",
      "node_modules/*",
      "src/**/*.spec.ts"
    ],
    "watch": [
      "package.json",
      "tsconfig.json",
      "src"
    ],
    "ext": "ts,yaml,js,json",
    "exec": "npm run dev"
  }
}
